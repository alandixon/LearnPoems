<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearnPoems.Pages.HelpPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="Center" Padding="8">
            <Label HorizontalTextAlignment="Center" Text="Help!" FontSize="Large"/>
            <StackLayout Orientation="Vertical" VerticalOptions="Center">
                <Label Text="Copyright ©" FontSize="Large" BackgroundColor="CornflowerBlue" TextColor="Black" />
                <Label Text="{Binding CopyrightText}" FontSize="Medium" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>