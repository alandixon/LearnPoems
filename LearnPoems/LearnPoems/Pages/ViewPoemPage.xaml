<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearnPoems.Pages.ViewPoemPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Vertical" VerticalOptions="Center">
                <Label Text="View Poem"/>
                <Label x:Name="Spacer"/>
                <Label Text="{Binding Repository.SelectedPoem.AllChunks}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>